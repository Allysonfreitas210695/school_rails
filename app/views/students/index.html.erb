<div class="container-main">
  <h1 class="title-container">
    Lista de Alunos
    <%= link_to new_student_path, class:'btn-submit' do %>
      <img src="https://img.icons8.com/color/48/000000/add--v1.png" style="width: 30px; height: 28px;"/>
    <% end %>
  </h1>

  <div class="content">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Registration</th>
          <th>Teacher</th>
          <th>Disciplina</th>
          <th>Unity 1</th>
          <th>Unity 2</th>
          <th>Unity 3</th>
          <th style="display:none;"></th>
        </tr>
      </thead>
      <tbody>

          <% @students.each do |student| %>
              <tr>
                <td><%= student.name %></td>
                <td><%= student.registration %></td>
                <td><%= student.teacher.name %></td>
                <td><%= student.teacher.discipline %></td>
                <td><%=  student.unity_one%></td>
                <td><%=  student.unity_two%></td>
                <td><%=  student.unity_three%></td>
                <td>
                  
                  <%= link_to edit_student_path(student), style:"border:none;" do %>
                    <img src="https://img.icons8.com/external-anggara-flat-anggara-putra/32/000000/external-edit-user-interface-anggara-flat-anggara-putra-3.png"/>
                  <% end %>

                  <%= link_to student_path(student), method: :delete do %>
                    <img src="https://img.icons8.com/external-anggara-outline-color-anggara-putra/32/000000/external-delete-user-interface-anggara-outline-color-anggara-putra.png"/>
                  <% end %>
                </td>
              </tr>
          <% end %>

      </tbody>

    </table>
  </div>

</div>
