<div class="container-main">
  <h1 class="title-container">Lista de Alunos</h1>

  <div class="content">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Registration</th>
          <th>Teacher</th>
          <th>Disciplina</th>
          <th>Unity 1</th>
          <th>Unity 2</th>
          <th>Unity 3</th>
        </tr>
      </thead>
      <tbody>

          <% @students.each do |student| %>
              <tr>
                <td><%= student.name %></td>
                <td><%= student.registration %></td>
                <td><%= student.teacher.name %></td>
                <td><%= student.teacher.discipline %></td>
                <td><%=  student.unity_one%></td>
                <td><%=  student.unity_two%></td>
                <td><%=  student.unity_three%></td>
              </tr>
          <% end %>
      
      </tbody>

    </table>
  </div>

</div>
