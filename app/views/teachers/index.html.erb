<div class="container-main">
  <h1 class="title-container">
    Lista de <%= Teacher.model_name.human(count: Teacher.count) %>
    <%= link_to new_teacher_path, class:'btn-submit' do %>
      <img src="https://img.icons8.com/color/48/000000/add--v1.png" style="width: 30px; height: 28px;"/>
    <% end %>
  </h1>

  <div class="content">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Registration</th>
          <th>Department</th>
          <th>Discipline</th>
          <th style="display:none;"></th>
        </tr>
      </thead>
      <tbody>

          <% @teachers.each do |teacher| %>
              <tr>
                <td><%= teacher.name %></td>
                <td><%= teacher.registration %></td>
                <td><%= teacher.department %></td>
                <td><%= teacher.discipline %></td>
                <td>
                  <%= link_to edit_teacher_path(teacher), style:"border:none;" do %>
                    <img src="https://img.icons8.com/external-anggara-flat-anggara-putra/32/000000/external-edit-user-interface-anggara-flat-anggara-putra-3.png"/>
                  <% end %>

                  <%= link_to teacher_path(teacher), method: :delete do %>
                    <img src="https://img.icons8.com/external-anggara-outline-color-anggara-putra/32/000000/external-delete-user-interface-anggara-outline-color-anggara-putra.png"/>
                  <% end %>
                </td>
              </tr>
          <% end %>

      </tbody>

    </table>
  </div>

</div>
